x256m\\\"\\n\\nexport HADOOP_HOME=${HADOOP_HOME:-{{hadoop_home}}}\\nexport HADOOP_CONF_DIR=${HADOOP_CONF_DIR:-{{hadoop_conf_dir}}}"
